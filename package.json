{
  "name": "source-bot-v3",
  "private": true,
  "scripts": {
    "dev:server": "pnpm --filter server dev",
    "dev:bot": "pnpm --filter bot dev",
    "dev:client": "pnpm --filter client dev",
    "build:shared": "pnpm --filter shared build",
    "build:server": "pnpm --filter server build",
    "build:bot": "pnpm --filter bot build",
    "build:client": "pnpm --filter client build",
    "build": "pnpm build:shared && pnpm build:server && pnpm build:bot && pnpm build:client",
    "db:generate": "pnpm --filter server prisma:generate",
    "db:migrate": "pnpm --filter server prisma:migrate",
    "db:seed": "pnpm --filter server prisma:seed"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild"
    ]
  }
}
